{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "path": "web-app/",
      "problemMatcher": [
        "$eslint-compact"
      ]
    },
    {
      "type": "npm",
      "script": "build",
      "path": "web-app/",
      "problemMatcher": [
        "$eslint-compact"
      ]
    },
    {
      "type": "shell",
      "label": "Build a release",
      "command": "${workspaceFolder}/scripts/build-release.cmd",
      "problemMatcher": []
    }
  ]
}
