{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "'Source Code Pro', Consolas, 'Courier New', monospace",
  "editor.formatOnSave": false,
  "editor.minimap.maxColumn": 120,
  "editor.rulers": [120],
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 120,
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[lua]": {
    "files.encoding": "windows1252",
    "files.autoGuessEncoding": true
  },
  "files.exclude": {
    "**/.classpath": true,
    "**/.factorypath": true,
    "**/.project": true,
    "**/.settings": true
  },
  "git-assistant.checkForRemote": "disabled",
  "html.format.endWithNewline": true,
  "html.format.indentHandlebars": true,
  "html.format.maxPreserveNewLines": 2,
  "html.format.wrapAttributes": "preserve-aligned",
  "javascript.preferences.quoteStyle": "single",
  "LuaCoderAssist.format.quotemark": "double",
  "LuaCoderAssist.luaparse.luaversion": 5.2,
  "LuaCoderAssist.luaparse.allowDefined": true,
  "LuaCoderAssist.luacheck.globals": [
    "clearlog",
    "EEPChangeInfoStructure",
    "EEPGetRollingstockItemsCount",
    "EEPGetSignal",
    "EEPGetSwitch",
    "EEPGetTrainRoute",
    "EEPGetTrainSpeed",
    "EEPGetSignalTrainName",
    "EEPGetSignalTrainsCount",
    "EEPIsAuxiliaryTrackReserved",
    "EEPIsControlTrackReserved",
    "EEPIsRailTrackReserved",
    "EEPIsRoadTrackReserved",
    "EEPIsTramTrackReserved",
    "EEPLoadData",
    "EEPPause",
    "EEPRegisterAuxiliaryTrack",
    "EEPRegisterControlTrack",
    "EEPRegisterRailTrack",
    "EEPRegisterRoadTrack",
    "EEPRegisterTramTrack",
    "EEPRollingstockGetCouplingFront",
    "EEPRollingstockGetCouplingRear",
    "EEPSaveData",
    "EEPShowInfoStructure",
    "EEPStructureGetAxis",
    "EEPStructureGetFire",
    "EEPStructureGetLight",
    "EEPStructureGetSmoke",
    "EEPStructureSetAxis",
    "EEPTime",
    "EEPTimeH",
    "EEPTimeM",
    "EEPTimeS",
    "EEPVer"
  ],
  "prettier.jsxBracketSameLine": true,
  "prettier.jsxSingleQuote": true,
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "search.exclude": {
    "/lua/modell-pakete": true
  },
  "typescript.preferences.quoteStyle": "single"
}
