# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.lua]
indent_size = 4
charset = latin1

[*.md]
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = false
