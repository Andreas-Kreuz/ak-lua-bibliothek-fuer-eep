# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.lua]
indent_size = 4
charset = utf-8

[*.java]
indent_size = 4

[*.json]
indent_size = 2

[*.scss]
indent_size = 2

[*.html]
indent_size = 2

[*.yml]
indent_size = 2

[*.ts]
indent_size = 2
quote_type = single

[*.tsx]
indent_size = 2
quote_type = single

[*.md]
indent_size = 2
trim_trailing_whitespace = false
